# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=TravnerDB

# OpenRouter AI Configuration
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Server Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
MONGO_LOG_LEVEL=WARN
WEB_LOG_LEVEL=WARN

# Upload Configuration
APP_UPLOAD_DIR=${user.home}/travner-uploads

# Chat Configuration
CHAT_MESSAGE_MAX_LENGTH=4000
CHAT_MESSAGE_MAX_ATTACHMENTS=5
CHAT_RATE_LIMIT_MESSAGES=60
CHAT_TYPING_COOLDOWN=2
CHAT_BROKER_TYPE=simple

# Stripe Payment Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000

# Elasticsearch Configuration (Optional - for advanced search)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=travner

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# AI Configuration
AI_TIMEOUT=30000
AI_CACHE_TTL=3600

